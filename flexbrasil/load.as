package flexbrasil{	import flash.events.*;	import flash.net.*	public function load(url:String, callback:Function, callbackFail:Function = null):void	{		var remote = true;		if (remote)		{			url += url.indexOf("?") == -1 ? "?" : "&";			url += new Date().getTime()		}		var urlRequest:URLRequest = new URLRequest(url);		var urlLoader:URLLoader = new URLLoader();		var ok:Function = function(e) {						callback.call(this, urlLoader.data)		}		var fail:Function = function(e) {			if (e is HTTPStatusEvent && (e.status == 200 || e.status == 0)) return;			if (callbackFail is Function) callbackFail.call(this, e);			trace(e);		}		urlLoader.addEventListener(Event.COMPLETE, ok);		urlLoader.addEventListener(HTTPStatusEvent.HTTP_STATUS, fail);		urlLoader.addEventListener(IOErrorEvent.IO_ERROR, fail);		urlLoader.addEventListener(SecurityErrorEvent.SECURITY_ERROR, fail);		urlLoader.load(urlRequest);	}}